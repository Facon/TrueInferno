import * from "CelShading.material"
import * from "Outline.material"

material Mine
{
	technique Shaders
	{
		pass CelSh : CelShadingDecal
		{
			ambient  1 1 1 1
			diffuse  1 1 1 1
			specular 0.6 0.2 0.2 15
 
			texture_unit decal {
				texture Mine_Albedo_BN.jpg
			}
		}

		pass Outlining : OutlineExperiment
		{
			set $edgeScale 0.02
			set $sinkScale 10
		}
	}
	
	technique Fallback
	{
		pass Fallback
		{
			texture_unit
			{
				texture error.png
			}
		}
	}
}
