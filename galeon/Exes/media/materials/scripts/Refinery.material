import * from "CelShading.material"
import * from "Outline.material"

material Refinery
{
	technique Shaders
	{
		pass CelSh : CelShadingDecal
		{
			ambient  1 1 1 1
			diffuse  1 1 1 1
			specular 0.8 0.4 0.2 10
 
			texture_unit decal {
				texture Refinery_Albedo.jpg
			}
		}

		pass Outlining : OutlineExperiment
		{
			set $edgeScale 0.015
			set $sinkScale 2
		}
	}
	
	technique Fallback
	{
		pass Fallback
		{
			texture_unit
			{
				texture error.png
			}
		}
	}
}